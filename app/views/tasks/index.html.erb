<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == false %>
      <li><i class="far fa-square"></i> <%= link_to task.title, task_path(task) %> - <i class="fas fa-trash-alt"></i>
        <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% else %>
      <li><i class="far fa-check-square"></i> <%= link_to task.title, task_path(task) %> - <i class="fas fa-trash-alt"></i>
        <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% end %>
  <% end %>
</ul>

<p><i class="fas fa-plus"></i><%= link_to "Add a new task", new_path %></p>
